<div class="row">
    <div class="col s3">
        <p>
            <b>{{ 'parking.label.carplate'|trans }}</b><br>
            <span class="black-text">{{ parking.carplate }}</span>
        </p>
    </div>
    <div class="col s2">
        <p>
            <b>{{ 'parking.label.parkingspot'|trans }}</b><br>
            <span class="black-text">{{ parking.parkingspot }}</span>
        </p>
    </div>
    <div class="col s2">
        <p>
            <b>{{ 'parking.label.startdate'|trans }}</b><br>
            <span class="black-text">{{ parking.startdate ? parking.startdate|date("d.m.Y") : '' }}</span>
        </p>
    </div>
    <div class="col s2">
        <p>
            <b>{{ 'parking.label.enddate'|trans }}</b><br>
            <span class="black-text">{{ parking.enddate ? parking.enddate|date("d.m.Y") : '' }}</span>
        </p>
    </div>
    <div class="col s2">
        <p>
            <b>{{ 'parking.label.price'|trans }}</b><br>
            <span class="black-text">EUR {{ parking.price | number_format(2, ',', '.')}}</span>
        </p>
    </div>
    <div class="col s1" style="text-align:right;">
        <a class='dropdown-trigger' href='#'
           data-target='dropdown_guests_{{ parking.id }}'>
            <i class="material-icons grey-text">more_vert</i>
        </a>
        <!-- Dropdown Structure -->
        <ul id='dropdown_guests_{{ parking.id }}' class='dropdown-content'>
            <li>
                <a href="{{ path('parking_show', {'id':parking.id}) }}" class="blue-text">
                    Show
                </a>
            </li>
            <li class="divider" tabindex="-1"></li>
            <li>
                <a href="{{ path('parking_edit', {'id': parking.id}) }}" class="blue-text">
                    Edit
                </a>
            </li>
        </ul>
    </div>
</div>