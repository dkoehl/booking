                    </ul>
                </div>

            </div>
            <ul class="collection with-header blue-grey-text">
                <li class="collection-item grey-text">
                    <div class="row">
                        <div class="col s3">
                            <p>
                                <b>Carplate</b><br>
                                <span class="black-text">{{ parking.carplate }}</span>
                            </p>
                        </div>
                        <div class="col s3">
                            <p>
                                <b>Startdate</b><br>
                                <span class="black-text">{{ parking.startdate ? parking.startdate|date('d.m.Y') : '' }}</span>
                            </p>
                        </div>
                        <div class="col s3">
                            <p>
                                <b>Enddate</b><br>
                                <span class="black-text">{{ parking.enddate ? parking.enddate|date('d.m.Y') : '' }}</span>
                            </p>
                        </div>
                        <div class="col s3">

                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>


