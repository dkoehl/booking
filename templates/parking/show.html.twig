{% extends 'base.html.twig' %}

{% block title %}Parking{% endblock %}

{% block body %}
    <div class="card floating-container">
        <div class="card-content">
            <div class="card-title blue-text">
                Parking
                <div class="right right-align right-aligned">
                    <a class='dropdown-trigger' href='#' data-target='dropdown0{{ parking.id }}'>
                        <i class="material-icons small grey-text">more_vert</i>
                    </a>
                    <!-- Dropdown Structure -->
                    <ul id='dropdown0{{ parking.id }}' class='dropdown-content'>
                        <li>
                            <a class="blue-text" href="javascript:history.back()">
                                Back
                            </a>
                        </li>
                        <li class="divider" tabindex="-1"></li>
                        <li>
