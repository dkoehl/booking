<li class="collection-item lighten-5 grey-text">
    <div class="row">
        <div class="col s12 m12">
            {{ form_start(parkingForm) }}
            {#                {{ form_widget(parkingForm) }}#}
            <div class="row">
                <div class="input-field col s3">
                    {{ form_row(parkingForm.carplate) }}
                </div>
                <div class="input-field col s2">
                    {{ form_row(parkingForm.parkingspot) }}
                </div>
                <div class="input-field col s2">
                    {{ form_row(parkingForm.startdate) }}
                </div>
                <div class="input-field col s2">
                    {{ form_row(parkingForm.enddate) }}
                </div>
                <div class="input-field col s3">
                    {{ form_row(parkingForm.price) }}
                </div>
            </div>



            <input type="hidden" id="parking_booking" name="parking[booking]" value="">
            <button class="btn waves-effect waves-light large light-blue z-depth-0" type="submit" name="action">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ button_label|default('Save') }}
                <i class="material-icons right">send</i>
            </button>
            {{ form_end(parkingForm) }}
        </div>

    </div>
</li>