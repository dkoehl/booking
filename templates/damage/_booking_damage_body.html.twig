<div class="row">
    <div class="col s6">
        <p>
            <b>{{ 'damage.label.damageart'|trans }}</b><br>
            <span class="black-text">{{ damage.damageart }}</span>
        </p>

        <p>
            <b>{{ 'damage.label.price'|trans }}</b><br>
            <span class="black-text">EUR {{ damage.price | number_format(2, ',', '.') }}</span>
        </p>

    </div>
    <div class="col s5">
        <p>
            <b>{{ 'damage.label.text'|trans }}</b><br>
            <span class="black-text">{{ damage.damagetext }}</span>
        </p>

    </div>
    <div class="col s1" style="text-align:right;">
        <a class='dropdown-trigger' href='#'
           data-target='dropdown_guests_{{ damage.id }}'>
            <i class="material-icons grey-text">more_vert</i>
        </a>
        <!-- Dropdown Structure -->
        <ul id='dropdown_guests_{{ damage.id }}' class='dropdown-content'>
            <li>
                <a href="{{ path('damage_show', {'id':damage.id}) }}" class="blue-text">
                    Show
                </a>
            </li>
            <li class="divider" tabindex="-1"></li>
            <li>
                <a href="{{ path('damage_edit', {'id': damage.id}) }}" class="blue-text">
                    Edit
                </a>
            </li>
        </ul>
    </div>
</div>