</head>
<body>
<div class="row">

    {#{{ dump(app.request) }}#}
    <div class="col s1 m1 l1 blue-grey darken-3" id="sitebar">
        <ul class="center sitebar white-text">
            <li>
                <a href="/" class="btn-floating light-blue medium">
                    <i class="material-icons">home</i>
                </a>
            </li>
            <br>
            <br>
            <br>
            <br>
            <li>
                <a href="/room"
                   class="{{ app.request.attributes.get('_route') starts with 'room' ? 'active light-blue-text' : 'white-text' }}">
                    <i class="material-icons ">meeting_room</i>
                    <br>Rooms
                </a>
            </li>
            <br>

            <li>
                <a href="/booking"
                   class="{{ app.request.attributes.get('_route') starts with 'booking' ? 'active light-blue-text' : 'white-text' }}">
                    <i class="material-icons ">event_available</i>
                    <br>
                    Bookings
                </a>
            </li>
            <br>

            <li>
                <a href="/guest"
                   class="{{ app.request.attributes.get('_route') starts with 'guest' ? 'active light-blue-text' : 'white-text' }}">
                    <i class="material-icons ">group</i>
                    <br>
                    Guests
                </a>
            </li>
            <br>

            <li><a href="" class="grey-text"><i class="material-icons">alarm</i><br>Arrivals</a></li>
            <br>
            <li><a href="" class="grey-text"><i class="material-icons">today</i><br>Calendar</a></li>
        </ul>
    </div>
    <div class="col s11 m11 l11">
        <div class="content-container grey lighten-5"
             style="position:absolute; top:0px; bottom:0px; right:0px; width:92%; left:8%; padding:20px; ">
            {% block body %}{% endblock %}
        </div>
    </div>

    <div class="fixed-action-btn">
        <a class="btn-floating btn-large light-blue">
            <i class="material-icons">add</i>
        </a>
        <ul>
            <li>
                <a class="btn-floating red" href="{{ path('room_new') }}">
                    <i class="material-icons">hotel</i>
                </a>
            </li>
            <li>
                <a class="btn-floating yellow darken-1" href="{{ path('booking_new') }}">
                    <i class="material-icons">assignment_ind</i>
                </a>
            </li>
            <li>
                <a class="btn-floating green" href="{{ path('guest_new') }}">
                    <i class="material-icons">account_circle</i>
                </a>
            </li>
            {#<li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>#}
        </ul>
    </div>

</div>


