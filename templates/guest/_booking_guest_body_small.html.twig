{#{{ dump(booking.guest) }}#}

<div class="row">
    <div class="col s3">
        <p>
            <b>{{ 'guest.label.lastnamefirstname'|trans }}</b><br>
            <a href="{{ path('guest_show', {'id': booking.guest.id}) }}">
                {{ booking.guest.lastnameFirstname|trim }}
            </a>
        </p>
        <p>
            <b>{{ 'guest.label.email'|trans }}</b><br>
            <span class="black-text">{{ booking.guest.email }}</span>
        </p>

    </div>
    <div class="col s3">
        <p>
            <b>{{ 'guest.label.birthday'|trans }}</b><br>
            <span class="black-text">{{ booking.guest.birthday ? booking.guest.birthday|date("d.m.Y") : '' }}</span>
        </p>
        <p>
            <b>{{ 'guest.label.phone'|trans }}</b><br>
            <span class="black-text">{{ booking.guest.phone }}</span>
        </p>
    </div>
    <div class="col s3">
        <p>
            <b>{{ 'guest.label.registered'|trans }}</b><br>
            <span class="black-text">{{ booking.guest.crdate ? booking.guest.crdate|date("D d.m.Y H:i", "Europe/Paris"): '' }}</span>
        </p>
    </div>
    <div class="col s3">
        {% if booking.guest.type == 2 %}
            <p>
                <b>{{ 'guest.label.company'|trans }}</b><br>
                <span class="black-text">{{ booking.guest.companyname }}</span>
            </p>
            <p>
                <b>{{ 'guest.label.signatureauthorized'|trans }}</b><br>
                <span class="black-text">{{ booking.guest.signatureauthorized }}</span>
            </p>
        {% endif %}
    </div>
</div>