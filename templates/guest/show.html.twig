{% extends 'base.html.twig' %}

{% block title %}Guest{% endblock %}

{% block body %}
    <a class="waves-effect waves-light btn right" href="{{ path('guest_index') }}">back to list</a>
    <h1>Guest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guest.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ guest.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ guest.firstname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ guest.birthday ? guest.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hidden</th>
                <td>{{ guest.hidden ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ guest.deleted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Crdate</th>
                <td>{{ guest.crdate }}</td>
            </tr>
            <tr>
                <th>Tstamp</th>
                <td>{{ guest.tstamp }}</td>
            </tr>
        </tbody>
    </table>


    <a class="waves-effect waves-light btn blue" href="{{ path('guest_edit', {'id': guest.id}) }}">edit</a>

    {{ include('guest/_delete_form.html.twig') }}
{% endblock %}
