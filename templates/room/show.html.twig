{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <a class="waves-effect waves-light btn right" href="{{ path('room_index') }}">back to list</a>
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Beds</th>
                <td>{{ room.beds }}</td>
            </tr>
            <tr>
                <th>Floor</th>
                <td>{{ room.floor }}</td>
            </tr>
            <tr>
                <th>House</th>
                <td>{{ room.house }}</td>
            </tr>
            <tr>
                <th>Tstamp</th>
                <td>{{ room.tstamp }}</td>
            </tr>
        </tbody>
    </table>


    <a class="waves-effect waves-light btn blue" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
