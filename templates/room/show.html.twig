{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    {#{{ dump(room) }}#}
    {#{{ dump(booking) }}#}

    {{ dump(room) }}
    {{ dump(booking) }}

    <div class="row">
        <div class="col m1">
            <a class="waves-effect waves-light btn right" href="{{ path('room_index') }}">back to list</a>
        </div>
        <div class="col m2">
            <a class="waves-effect waves-light btn blue" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
        </div>
        <div class="col m8">
            {{ include('room/_delete_form.html.twig') }}
        </div>
    </div>


    <ul class="collection with-header">
        <li class="collection-header"><h4>{{ room.name }}<span class="badge teal white-text">{{ room.id }}</span></h4></li>
        <li class="collection-item">
            <i class="material-icons">local_hotel</i> {{ room.beds }}
        </li>
        <li class="collection-item">
            <i class="material-icons">home</i> {{ room.house }}
        </li>
        <li class="collection-item">
            <i class="material-icons">edit</i> {{ room.tstamp|date("d.m.Y H:i") }}
        </li>
    </ul>

    <h4 class="section-title teal-text">Bookings for this room</h4>
    <div class="row">
        {% for booked in booking %}
            <div class="col s12 m4">
                <div class="card horizontal teal">
                    <div class="card-content white-text">
                        <span class="card-title">BookingNo: <b>{{ booked.id }}</b></span>
                        <p>
                            <b>From:</b> {{ booked.bookingfrom|date('d.m.Y H:i') }} <br/>
                            <b>Till:</b> {{ booked.bookingtill|date('d.m.Y H:i') }} <br/>
                        </p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('booking_show', {'id': booked.id}) }}">show</a>
                        <a href="{{ path('booking_edit', {'id': booked.id}) }}">edit</a>
                    </div>
                </div>
            </div>
        {% else %}
        <div class="col s12 m4">
            <p>no records found</p>
        </div>
        {% endfor %}
    </div>




{% endblock %}
