{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Payment</th>
                <th>Number</th>
                <th>Securitynumber</th>
                <th>Hidden</th>
                <th>Deleted</th>
                <th>Crdate</th>
                <th>Tstamp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.payment }}</td>
                <td>{{ payment.number }}</td>
                <td>{{ payment.securitynumber }}</td>
                <td>{{ payment.hidden ? 'Yes' : 'No' }}</td>
                <td>{{ payment.deleted ? 'Yes' : 'No' }}</td>
                <td>{{ payment.crdate }}</td>
                <td>{{ payment.tstamp }}</td>
                <td>
                    <a href="{{ path('payment_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('payment_new') }}">Create new</a>
{% endblock %}
