<ul class="collection with-header blue-grey-text">
    <li class="collapsible-header" style="border-bottom:0px;">
        <div class="col s12">
            <h5 class="section-title blue-text">
                <i class="material-icons">today</i>
                New Booking
                <div class="right right-align right-aligned">
                    <a href="javascript:history.back()">
                        <i class="material-icons small grey-text">close</i>
                    </a>
                </div>
            </h5>
        </div>
    </li>
    {#Booking Data#}
    <li class="collection-item lighten-5 grey-text">
        <div class="row">
            <div class="col s12 m12">
                {{ form_start(form) }}
                {{ form_widget(form) }}


                <div id="radios">
                    <div>
                        <input type="radio" id="ez" name="roomtype" value="ez" style="position:relative; opacity: 1; pointer-events: all;">
                        <label for="ez">Einzel- Zimmer</label>
                    </div>
                    <div>
                        <input type="radio" id="dz" name="roomtype" value="dz" style="position:relative; opacity: 1; pointer-events: all;">
                        <label for="dz">Doppel- Zimmer</label>
                    </div>
                </div>

                <div>
                    <ul id="bookingVacancies"></ul>
                </div>



                <button class="btn waves-effect waves-light large light-blue z-depth-0" type="submit" id="booking_submit" name="action">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ button_label|default('Save') }}
                    <i class="material-icons right">send</i>
                </button>
                {{ form_end(form) }}
            </div>

        </div>
    </li>
</ul>




